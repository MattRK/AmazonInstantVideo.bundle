<?xml version="1.0" encoding="UTF-8"?>
<site site="http://.*\.amazon\.com"
      plugin="http://.*\.images-amazon\.com/images/G/01/digital/video/streaming/.*?/UnboxScreeningRoomClient\._.*?\.swf"
      initialState="open"
      finalState="close"
      windowWidth="1280"
      windowHeight="720"
      agent="Mozilla/5.0 (Macintosh; U; Intel Mac OS X 10_5_6; en-gb) AppleWebKit/528.16 (KHTML, like Gecko) Version/4.0 Safari/528.16"
      manualLock="true"
      identifier="com.plexapp.plugins.amazonprime"
      version="1.0">

    <crop x="0" y="0" width="0" height="0" />

    <state name="open">
        <event>
            <condition>
                <frameLoaded />
            </condition>
            <action>
                <visit url="https://www.amazon.com/gp/aw/ya" />
                <goto state="login" />
            </action>
        </event>
    </state>

    <state name="login">
        <event>
            <condition>
                <title matches="^Amazon$" />
            </condition>
            <action>
                <pause time="500" />
                <run script="document.getElementsByName('email')[0].value='{$username}'" />
                <run script="document.getElementsByName('password')[0].value='{$password}'" />
                <run script="document.forms[0].submit()" />
                <pause time="500" />
                <goto state="reload" />
            </action>
        </event>

        <event>
            <condition>
                <title matches="^Amazon:Your Account$" />
            </condition>
            <action>
                <goto state="reload" />
            </action>
        </event>
    </state>

    <state name="reload">
        <event>
            <condition>
                <pref name="password" exists="true"/>
            </condition>
            <action>
                <visit url="${url}" />
                <goto state="launch" />
            </action>
        </event>
    </state>

    <state name="launch">
        <event>
            <condition>
                <frameLoaded />
            </condition>
            <action>
                <pause time="500" />
                <run script="watchFromBeginning();" />
                <lockPlugin />
                <goto state="playing" />
            </action>
        </event>
    </state>

    <state name="playing">
        <event>
            <condition>
                <command name="pause"/>
            </condition>
            <action>
                <run script="$.avodPause()"/>
                <goto state="paused" />
            </action>
        </event>

        <event>
            <condition>
                <command name="bigstep+" />
            </condition>
            <action>
                <run script="$.setPlayheadTime($.getPlayheadTime()+30)" />
            </action>
        </event>

        <event>
            <condition>
                <command name="bigstep-" />
            </condition>
            <action>
                <run script="$.setPlayheadTime($.getPlayheadTime()-30)" />
            </action>
        </event>

        <event>
            <condition>
                <command name="smallstep+" />
            </condition>
            <action>
                <run script="$.setPlayheadTime($.getPlayheadTime()+10)" />
            </action>
        </event>

        <event>
            <condition>
                <command name="smallstep-" />
            </condition>
            <action>
                <run script="$.setPlayheadTime($.getPlayheadTime()-10)" />
            </action>
        </event>
    </state>

    <state name="paused">
        <event>
            <condition>
                <command name="play"/>
            </condition>
            <action>
                <run script="$.avodPlay()"/>
                <goto state="playing" />
            </action>
        </event>
    </state>

    <state name="close">
        <event>
            <condition>
                <pref name="password" exists="true"/>
            </condition>
            <action>
                <run script="client.exitVideoPlayer();" />
                <pause time="1000" />
            </action>
        </event>
    </state>
</site>
