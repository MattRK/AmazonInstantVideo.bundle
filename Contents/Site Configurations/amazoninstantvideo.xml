<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.amazon.com"
      plugin="http://.*\.images-amazon\.com/images/G/01/digital/video/streaming/.*?/UnboxScreeningRoomClient\._.*?\.swf"
      initialState="open"
      finalState="close"
      manualLock="true"
      identifier="com.plexapp.plugins.amazoninstantvideo"
      version="1.0">

    <state name="open">
        <event>
            <condition>
                <frameLoaded />
            </condition>
            <action>
                <visit url="https://www.amazon.com/gp/aw/ya" />
                <goto state="login" />
            </action>
        </event>
    </state>

    <state name="login">
        <event>
            <condition>
                <title matches="^Amazon$" />
            </condition>
            <action>
                <run script="document.getElementsByName('email')[0].value='${username}';" />
                <run script="document.getElementsByName('password')[0].value='${password}';" />
                <run script="document.forms[0].submit();" />
                <pause time="500" />
                <goto state="reload" />
            </action>
        </event>

        <event>
            <condition>
                <title matches="^Amazon:Your Account$" />
            </condition>
            <action>
                <goto state="reload" />
            </action>
        </event>
    </state>

    <state name="reload">
        <event>
            <condition>
                <javascript script="true ? 1 : 0" matches="1" />
            </condition>
            <action>
                <visit url="${url}" />
                <goto state="launch" />
            </action>
        </event>
    </state>

    <state name="launch">
        <event>
            <condition>
                <frameLoaded />
            </condition>
            <action>
                <pause time="500" />
                <run script="watchFromBeginning();" />
                <lockPlugin />
                <goto state="playing" />
            </action>
        </event>
    </state>

    <state name="playing">
        <event>
            <condition>
                <command name="pause" />
            </condition>
            <action>
                <run script="$.avodPause()" />
                <goto state="paused" />
            </action>
        </event>

        <event>
            <condition>
                <command name="bigstep+" />
            </condition>
            <action>
                <run script="$.setPlayheadTime($.getPlayheadTime() + 30)" />
            </action>
        </event>

        <event>
            <condition>
                <command name="bigstep-" />
            </condition>
            <action>
                <run script="$.setPlayheadTime($.getPlayheadTime() - 30)" />
            </action>
        </event>

        <event>
            <condition>
                <command name="smallstep+" />
            </condition>
            <action>
                <run script="$.setPlayheadTime($.getPlayheadTime() + 10)" />
            </action>
        </event>

        <event>
            <condition>
                <command name="smallstep-" />
            </condition>
            <action>
                <run script="$.setPlayheadTime($.getPlayheadTime() - 10)" />
            </action>
        </event>
    </state>

    <state name="paused">
        <event>
            <condition>
                <command name="play" />
            </condition>
            <action>
                <run script="$.avodPlay()" />
                <goto state="playing" />
            </action>
        </event>
    </state>

    <state name="close">
        <event>
            <condition>
                <javascript script="true ? 1 : 0" matches="1" />
            </condition>
            <action>
                <run script="client.exitVideoPlayer();" />
                <pause time="1000" />
            </action>
        </event>
    </state>
</site>
